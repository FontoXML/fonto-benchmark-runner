{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "dom"
    ],
    "outDir": "lib",
    "sourceMap": false,
    "target": "esNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ]
}
